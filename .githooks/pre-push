#!/usr/bin/env bash
set -e

echo "ğŸš€ Running pre-push checks..."

# é¢œè‰²å®šä¹‰
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# è¿è¡Œæ ‡å‡† clippy æ£€æŸ¥ï¼ˆä¸åŒ…æ‹¬ unwrap/expect è­¦å‘Šï¼‰
echo "ğŸ” Running standard clippy checks..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo -e "${RED}âŒ Clippy checks failed!${NC}"
    echo "Fix the issues before pushing"
    exit 1
fi

# å¯é€‰ï¼šæ˜¾ç¤ºä¸¥æ ¼æ£€æŸ¥çš„ç»“æœï¼ˆä»…ä¾›å‚è€ƒï¼Œä¸é˜»æ­¢æ¨é€ï¼‰
echo "ğŸ“Š Running optional strict checks (informational only)..."
cargo clippy --all-targets --all-features -- \
    -D warnings \
    -W clippy::unwrap_used \
    -W clippy::expect_used \
    -W clippy::panic \
    -W clippy::unimplemented \
    -W clippy::todo 2>&1 | grep -E "warning:|error:" | head -10 || true
if [ ${PIPESTATUS[0]} -ne 0 ]; then
    echo -e "${YELLOW}â„¹ï¸  Some strict checks would fail (see above). Consider addressing these in future commits.${NC}"
fi

# æ£€æŸ¥ä¾èµ–å®‰å…¨æ€§
if command -v cargo-audit &> /dev/null; then
    echo "ğŸ” Checking for security vulnerabilities..."
    if ! cargo audit; then
        echo -e "${YELLOW}âš ï¸  Security vulnerabilities found in dependencies${NC}"
    fi
else
    echo -e "${YELLOW}âš ï¸  cargo-audit not installed, skipping security check${NC}"
    echo "Install with: cargo install cargo-audit"
fi

# æ£€æŸ¥æœªä½¿ç”¨çš„ä¾èµ–
if command -v cargo-udeps &> /dev/null; then
    echo "ğŸ“¦ Checking for unused dependencies..."
    if ! cargo +nightly udeps --all-targets; then
        echo -e "${YELLOW}âš ï¸  Unused dependencies found${NC}"
    fi
else
    echo -e "${YELLOW}âš ï¸  cargo-udeps not installed, skipping dependency check${NC}"
    echo "Install with: cargo install cargo-udeps"
fi

# æµ‹è¯•å°†åœ¨ CI ä¸­è¿è¡Œï¼Œè¿™é‡Œè·³è¿‡ä»¥åŠ å¿«æ¨é€é€Ÿåº¦
# echo "ğŸ§ª Running all tests..."
# if ! cargo test --workspace; then
#     echo -e "${RED}âŒ Tests failed!${NC}"
#     exit 1
# fi

# æ£€æŸ¥æ–‡æ¡£
echo "ğŸ“š Checking documentation..."
if ! cargo doc --no-deps --document-private-items --all-features; then
    echo -e "${YELLOW}âš ï¸  Documentation issues found${NC}"
fi

echo -e "${GREEN}âœ… All pre-push checks passed!${NC}"