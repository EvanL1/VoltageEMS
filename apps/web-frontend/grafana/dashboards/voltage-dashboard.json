{
  "dashboard": {
    "title": "VoltageEMS 实时监控",
    "panels": [
      {
        "id": 1,
        "title": "设备温度趋势",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          { "target": "device_001.temperature", "refId": "A" },
          { "target": "device_002.temperature", "refId": "B" },
          { "target": "device_003.temperature", "refId": "C" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "系统功率",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          { "target": "device_001.power", "refId": "A" },
          { "target": "device_002.power", "refId": "B" },
          { "target": "device_003.power", "refId": "C" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 3,
        "title": "电压监控",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
        "targets": [
          { "target": "device_001.voltage", "refId": "A" }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "volt",
            "min": 180,
            "max": 260,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 200 },
                { "color": "green", "value": 210 },
                { "color": "yellow", "value": 230 },
                { "color": "red", "value": 240 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "电流监控",
        "type": "stat",
        "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
        "targets": [
          { "target": "device_001.current", "refId": "A" },
          { "target": "device_002.current", "refId": "B" },
          { "target": "device_003.current", "refId": "C" }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "amp",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 12 },
                { "color": "red", "value": 15 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "系统状态",
        "type": "table",
        "gridPos": { "x": 16, "y": 8, "w": 8, "h": 8 },
        "targets": [
          { "target": "device_001.temperature", "refId": "A" },
          { "target": "device_001.voltage", "refId": "B" },
          { "target": "device_001.current", "refId": "C" },
          { "target": "device_001.power", "refId": "D" }
        ],
        "options": {
          "showHeader": true
        }
      }
    ],
    "time": { "from": "now-1h", "to": "now" },
    "refresh": "5s",
    "schemaVersion": 36,
    "version": 1
  },
  "overwrite": true
}