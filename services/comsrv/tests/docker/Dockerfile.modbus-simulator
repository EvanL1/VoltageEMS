# Modbus TCP模拟器 Dockerfile
FROM python:3.11-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# 安装Python依赖
COPY tests/docker/requirements-simulator.txt .
RUN pip install --no-cache-dir -r requirements-simulator.txt

# 复制模拟器脚本
COPY tests/docker/modbus_simulator.py .

# 设置环境变量
ENV MODBUS_PORT=502
ENV SLAVE_ID=1
ENV REGISTER_COUNT=100

# 暴露端口
EXPOSE 502

# 创建日志目录
RUN mkdir -p /app/logs

# 启动模拟器
CMD ["python", "modbus_simulator.py"]