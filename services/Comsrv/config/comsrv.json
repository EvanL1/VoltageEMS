{
    "protocols": [
        {
            "type": "modbus_rtu_master",
            "name": "RTU Master 1",
            "port": "/dev/ttyUSB0",
            "baudrate": 9600,
            "databits": 8,
            "parity": "none",
            "stopbits": 1,
            "timeout": 1000,
            "polling": [
                {
                    "slave_id": 1,
                    "address": 100,
                    "type": "holding_register",
                    "count": 10,
                    "register_type": "uint16",
                    "endian": "big_endian",
                    "interval": 1000,
                    "tag": "device1.registers"
                },
                {
                    "slave_id": 2,
                    "address": 200,
                    "type": "input_register",
                    "count": 5,
                    "register_type": "float32",
                    "endian": "little_endian",
                    "interval": 2000,
                    "tag": "device2.temperature"
                }
            ]
        },
        {
            "type": "modbus_tcp_master",
            "name": "TCP Master 1",
            "ip": "192.168.1.100",
            "port": 502,
            "timeout": 1000,
            "polling": [
                {
                    "slave_id": 1,
                    "address": 0,
                    "type": "coil",
                    "count": 8,
                    "interval": 500,
                    "tag": "device3.status"
                },
                {
                    "slave_id": 3,
                    "address": 300,
                    "type": "holding_register",
                    "count": 20,
                    "register_type": "int32",
                    "endian": "big_endian_byte_swap",
                    "interval": 1500,
                    "tag": "device4.data"
                }
            ]
        }
    ],
    "logging": {
        "level": "info",
        "file": "comsrv.log",
        "console": true,
        "max_size": 10485760,
        "max_files": 10
    },
    "data_export": {
        "enabled": true,
        "redis": {
            "host": "localhost",
            "port": 6379,
            "password": "",
            "db": 0,
            "key_prefix": "comsrv:"
        },
        "mqtt": {
            "enabled": false,
            "broker": "localhost",
            "port": 1883,
            "username": "",
            "password": "",
            "topic_prefix": "comsrv/"
        }
    }
} 