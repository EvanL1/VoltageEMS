# Test Dockerfile for rulesrv
FROM rust:1.80 as builder

WORKDIR /app

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY libs ./libs
COPY services/rulesrv ./services/rulesrv

# Build the service
WORKDIR /app/services/rulesrv
RUN cargo build --release

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Copy the binary
COPY --from=builder /app/services/rulesrv/target/release/rulesrv /app/rulesrv

# Copy config and examples
COPY services/rulesrv/config /app/config
COPY services/rulesrv/examples /app/examples

# Make binary executable
RUN chmod +x /app/rulesrv

WORKDIR /app

# Default command
CMD ["/app/rulesrv", "service"]