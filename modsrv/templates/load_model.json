{
  "id": "load_model",
  "name": "负载模型",
  "description": "负载实时状态监控和控制模型",
  "input_mappings": [
    {
      "source_key": "ems:data:load",
      "source_field": "status",
      "target_field": "status",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "power",
      "target_field": "power",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "voltage",
      "target_field": "voltage",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "current",
      "target_field": "current",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "frequency",
      "target_field": "frequency",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "power_factor",
      "target_field": "power_factor",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "daily_energy",
      "target_field": "daily_energy",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "total_energy",
      "target_field": "total_energy",
      "transform": null
    },
    {
      "source_key": "ems:data:load",
      "source_field": "priority",
      "target_field": "priority",
      "transform": null
    }
  ],
  "output_key": "ems:model:output:load",
  "enabled": true,
  "actions": [
    {
      "id": "load_disconnect",
      "name": "断开负载",
      "action_type": "RemoteControl",
      "channel": "Load_Control",
      "point": "disconnect_command",
      "value": "1",
      "conditions": [
        {
          "field": "power",
          "operator": ">",
          "value": "10000"
        }
      ],
      "enabled": true
    },
    {
      "id": "load_connect",
      "name": "连接负载",
      "action_type": "RemoteControl",
      "channel": "Load_Control",
      "point": "connect_command",
      "value": "1",
      "conditions": [
        {
          "field": "status",
          "operator": "==",
          "value": "disconnected"
        },
        {
          "field": "power",
          "operator": "<",
          "value": "9000"
        }
      ],
      "enabled": true
    },
    {
      "id": "load_shed_low_priority",
      "name": "低优先级负载切除",
      "action_type": "RemoteControl",
      "channel": "Load_Control",
      "point": "shed_low_priority",
      "value": "1",
      "conditions": [
        {
          "field": "power",
          "operator": ">",
          "value": "8000"
        },
        {
          "field": "priority",
          "operator": ">",
          "value": "3"
        }
      ],
      "enabled": true
    },
    {
      "id": "load_high_current_alert",
      "name": "电流过高告警",
      "action_type": "RemoteControl",
      "channel": "Alarm_System",
      "point": "high_current_alarm",
      "value": "1",
      "conditions": [
        {
          "field": "current",
          "operator": ">",
          "value": "100"
        }
      ],
      "enabled": true
    }
  ]
} 